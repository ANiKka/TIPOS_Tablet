<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bg_img"
    android:orientation="vertical"  >
    
    <LinearLayout
        android:id="@+id/linearLayoutTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.26"
            android:textColor="#ffffff"
            android:text="행사명"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/editTextEventName"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#000000"
            android:background="@drawable/white_text_box_small"
            android:textSize="14sp"
            android:inputType="text" />
                 
    </LinearLayout>
    
    
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >
    
        <TextView
            android:id="@+id/textView1"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.26"
            android:textColor="#ffffff"
            android:text="행사구분"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="14sp" />
        
    	<Spinner
            android:id="@+id/spinnerEventType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:entries="@array/event_type"
            android:prompt="@string/choose_event_type"
            android:textSize="14sp" />
    
    </LinearLayout>
    
    
	<LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textViewEventTypeTitle"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.55"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:text="행사기간"
            android:textAppearance="?android:attr/textAppearanceSmall"/>
        
        <Button
             android:id="@+id/buttonSetDate1"
             style="?android:attr/buttonStyleSmall"
             android:layout_width="0dip"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:textSize="14sp"
             android:text="2013-05-19"
             android:onClick="onClickSetDate1" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:text="~"
            android:textAppearance="?android:attr/textAppearanceSmall"
            />
        
        <Button
            android:id="@+id/buttonSetDate2"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="14sp"
            android:text="2013-05-19"
            android:onClick="onClickSetDate2" />
        
    </LinearLayout>
    
	<LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView5"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:text="바코드"
            android:textAppearance="?android:attr/textAppearanceSmall" />
        
        <EditText
            android:id="@+id/editTextBarcode"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:textColor="#000000"
            android:background="@drawable/white_text_box_small"
            android:inputType="text"
            android:ems="10"
            android:textSize="14sp"  />
        
         <Button
	        android:id="@+id/buttonBarcode"
	        android:layout_width="28dp"
	        android:layout_height="28dp"
	        android:layout_marginLeft="5dp"
	        android:background="@drawable/search_btn"
            android:onClick="onBarcodeSearch" />
        
        <TextView
            android:id="@+id/textView6"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:text="상품명"
            android:layout_marginLeft="5dip"
            android:textAppearance="?android:attr/textAppearanceSmall" />

         <EditText
	        android:id="@+id/editTextProductName"
	        android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.48"
            android:textColor="#000000"
            android:background="@drawable/white_text_box_small"
            android:inputType="text"
            android:ems="10"            
	        android:clickable="false" 
		    android:cursorVisible="false" 
		    android:focusable="false" 
		    android:focusableInTouchMode="false"
            android:textSize="14sp"  
	     />       
    
    </LinearLayout>
    
	<LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView7"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:text="매입가"
            android:textAppearance="?android:attr/textAppearanceSmall" />
        
        <EditText
            android:id="@+id/editTextPurchasePrice"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#000000"
            android:background="@drawable/white_text_box_small"
            android:inputType="number"
            android:ems="10"
	        android:clickable="false" 
		    android:cursorVisible="false" 
		    android:focusable="false" 
		    android:focusableInTouchMode="false"
            android:textSize="14sp"  />
        
        <TextView
            android:id="@+id/textView8"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.45"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:layout_marginLeft="5dip"
            android:text="판매가"
            android:textAppearance="?android:attr/textAppearanceSmall" />

         <EditText
	        android:id="@+id/editTextSalePrice"
	        android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:textColor="#000000"
            android:background="@drawable/white_text_box_small"
            android:inputType="number"
            android:ems="10"
	        android:clickable="false" 
		    android:cursorVisible="false" 
		    android:focusable="false" 
		    android:focusableInTouchMode="false"
            android:textSize="14sp"  
	     />       
    
    </LinearLayout>

	<LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView9"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:text="행사매입가"
            android:textAppearance="?android:attr/textAppearanceSmall" />
        
        <EditText
            android:id="@+id/editTextAmount"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:textColor="#000000"
            android:background="@drawable/white_text_box_small"
            android:inputType="number"
            android:ems="10"
            android:textSize="14sp" />
        
        <TextView
            android:id="@+id/textView10"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.85"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:layout_marginLeft="5dip"
            android:text="행사판매가"
            android:textAppearance="?android:attr/textAppearanceSmall" />

         <EditText
             android:id="@+id/editTextProfitRatio"
             android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:textColor="#000000"
            android:background="@drawable/white_text_box_small"
            android:inputType="number"
            android:ems="10"
            android:textSize="14sp" />
    
    </LinearLayout>
    
	<LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal" >

       <Button
	        android:id="@+id/buttonRegist"
	        style="?android:attr/buttonStyleSmall"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:scaleY="0.75"
	        android:background="@drawable/register_btn" />
       
       <Button
	        android:id="@+id/buttonModify"
	        style="?android:attr/buttonStyleSmall"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dip"
	        android:scaleY="0.75"
	        android:background="@drawable/change_btn"
	        android:visibility="gone"
	        android:onClick="OnClickModify" />
        
       <Button
	        android:id="@+id/buttonRenew"
	        style="?android:attr/buttonStyleSmall"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dip"
	        android:scaleY="0.75"
	        android:background="@drawable/replace_btn" />
       
        <Button
            android:id="@+id/buttonDelete"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
	        android:layout_marginLeft="10dip"
	        android:scaleY="0.75"
            android:background="@drawable/purchase_delete_btn" />
       
       
    </LinearLayout>
       
	<LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/tap_bar_bg"
        android:gravity="center"
        android:orientation="horizontal" >
        
        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:text="행사 상세 상품 목록"
            android:textAppearance="?android:attr/textAppearanceSmall"
             />
	
	</LinearLayout>
	
    <!-- Header -->
    <LinearLayout android:id="@+id/header"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        >
        <TextView android:id="@+id/item1"
            android:layout_height="fill_parent"
            android:layout_width="110dp"
			android:gravity="center"
			android:textColor="#d7d7d7"
			android:textStyle="bold"
			android:textSize="14sp"
			android:background="@drawable/gray_bar_bg"
            android:text="바코드"
        />
        
        <TextView android:id="@+id/item2"
            android:layout_height="fill_parent"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:text="상품명"
			android:textColor="#d7d7d7"
            android:textStyle="bold"
            android:textSize="14sp"
            android:gravity="center"
            android:background="@drawable/gray_bar_bg"
        />
        <TextView android:id="@+id/item2"
            android:layout_width="80dp"
            android:layout_height="fill_parent"
            android:gravity="center"
			android:textColor="#d7d7d7"
			android:textStyle="bold"
			android:textSize="14sp"
			android:background="@drawable/gray_bar_bg"
            android:text="행사매입가"
        />
        <TextView android:id="@+id/item3"
            android:layout_width="80dp"
            android:layout_height="fill_parent"
            android:gravity="center"
			android:textColor="#d7d7d7"
			android:textStyle="bold"
			android:textSize="14sp"
			android:background="@drawable/gray_bar_bg"
            android:text="행사판매가"
        />
    </LinearLayout>

    <!-- List Divider -->
    <View android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="?android:attr/listDivider" />
 
    <!-- ListView (grid_items) -->
    <LinearLayout android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ListView
            android:id="@+id/listviewReadyToSendEventList"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            >

        </ListView>
    </LinearLayout>

</LinearLayout>
