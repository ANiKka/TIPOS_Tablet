<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".CustomerProductDetailViewActivity" >

     <LinearLayout
         android:id="@+id/linearLayoutTitle"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal" >
         
        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.45"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:text="날짜"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <EditText
            android:id="@+id/editTextPeriod1"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#000000"
            android:background="@drawable/white_text_box_small"
            android:textSize="14sp"
            android:inputType="date" />

        <requestFocus />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:text="~"
            android:textAppearance="?android:attr/textAppearanceSmall"
            />

        <EditText
            android:id="@+id/editTextPeriod2"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#000000"
            android:background="@drawable/white_text_box_small"
            android:textSize="14sp"
            android:inputType="date" />
	        
	</LinearLayout>
         
	<LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/linearLayoutTitle"
        android:orientation="horizontal" >

         <TextView
            android:id="@+id/textView1"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:text="거래처명 : "
            android:textAppearance="?android:attr/textAppearanceSmall"/>
        
         <TextView
             android:id="@+id/textView3"
             android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#ffffff"
            android:textSize="14sp"
             android:text="xxxxxx "
             android:layout_marginLeft="5dip"
             android:textAppearance="?android:attr/textAppearanceSmall" />
     </LinearLayout>
     
    
    <!-- Header -->
   	<LinearLayout android:id="@+id/header"        
       android:layout_height="wrap_content"
       android:layout_width="fill_parent"
       android:layout_marginTop="10dip"
       android:orientation="horizontal"
       android:layout_below="@id/linearLayout2"
       >
        <TextView android:id="@+id/item1"
            android:layout_height="fill_parent"
			android:layout_width="0dip"
			android:layout_weight="1"
			android:textColor="#d7d7d7"
			android:textStyle="bold"
			android:textSize="14sp"
			android:gravity="center"
			android:background="@drawable/gray_bar_bg"
            android:text="바코드"
        />
        <TextView android:id="@+id/item2"
            android:layout_height="fill_parent"
			android:layout_width="0dip"
			android:layout_weight="1"
			android:textColor="#d7d7d7"
			android:textStyle="bold"
			android:textSize="14sp"
			android:gravity="center"
			android:background="@drawable/gray_bar_bg"
            android:text="상품명"
        />
        <TextView android:id="@+id/item3"
            android:layout_height="fill_parent"
			android:layout_width="0dip"
			android:layout_weight="1"
			android:textColor="#d7d7d7"
			android:textStyle="bold"
			android:textSize="14sp"
			android:gravity="center"
			android:background="@drawable/gray_bar_bg"
            android:text="수량"
        />
        <TextView android:id="@+id/item4"
            android:layout_height="fill_parent"
			android:layout_width="0dip"
			android:layout_weight="1"
			android:textColor="#d7d7d7"
			android:textStyle="bold"
			android:textSize="14sp"
			android:gravity="center"
			android:background="@drawable/gray_bar_bg"
            android:text="순수량"
        />
	        
   	</LinearLayout>

    <!-- List Divider -->
    <View android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_below="@id/header"
        android:background="?android:attr/listDivider" />
 
    <!-- ListView (grid_items) -->
    <LinearLayout android:id="@+id/layout"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_below="@+id/header"
        >
        <ListView android:id="@+id/listviewCustomerProductDetailViewList"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:focusable = "false" 
            android:clickable="false"
            >
        </ListView>
    </LinearLayout>
    
</RelativeLayout>