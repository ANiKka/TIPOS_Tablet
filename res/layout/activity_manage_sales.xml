<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bg_img"
    tools:context=".ManageSalesActivity" >

    <LinearLayout
        android:id="@+id/linearLayoutTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.45"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:text="매출기간"
            android:textAppearance="?android:attr/textAppearanceSmall" />
        
        <Button
             android:id="@+id/buttonSetDate1"
             style="?android:attr/buttonStyleSmall"
             android:layout_width="0dip"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:textSize="14sp"
             android:text="2013-05-19"
             android:onClick="onClickSetDate1" />

        <requestFocus />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:text="~"
            android:textAppearance="?android:attr/textAppearanceSmall"
            />
        
        <Button
            android:id="@+id/buttonSetDate2"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="14sp"
            android:text="2013-05-19"
            android:onClick="onClickSetDate2" />
    
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/linearLayoutTitle"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView4"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:text="바코드"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#ffffff"
            android:textSize="14sp"  />

        <EditText
            android:id="@+id/editTextBarcode"
            android:layout_width="0dip"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:ems="10"
             android:textSize="14sp"
             android:textColor="#000000"
             android:background="@drawable/white_text_box_small" 
             android:inputType="text"
             android:singleLine="true"/>
        
         <Button
	        android:id="@+id/buttonBarcode"
	        android:layout_width="28dp"
	        android:layout_height="28dp"
	        android:layout_marginLeft="5dp"
	        android:background="@drawable/search_btn"
            android:onClick="onBarcodeSearch" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.6"
            android:text="상품명"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/editTextProductName"
            android:layout_width="0dip"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:ems="10"
	        android:textColor="#000000"
            android:background="@drawable/white_text_box_small"
	        android:textSize="14sp"
	        android:inputType="text"
	        android:singleLine="true" />
        
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/linearLayout2"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView6"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.45"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:text="거래처"
            android:textAppearance="?android:attr/textAppearanceSmall"
            />

        <EditText
            android:id="@+id/editTextCustomerCode"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#000000"
            android:background="@drawable/white_text_box_small"
            android:textSize="14sp"
            android:inputType="text"
            android:ems="10"
            android:singleLine="true"/>
        
         <Button
	        android:id="@+id/buttonCustomer"
	        android:layout_width="28dp"
	        android:layout_height="28dp"
	        android:layout_marginLeft="5dp"
	        android:background="@drawable/search_btn"
            android:onClick="onCustomerSearch" />

        <EditText
            android:id="@+id/editTextCustomerName"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:textColor="#000000"
            android:background="@drawable/white_text_box_small"
            android:textSize="14sp"
            android:inputType="text"
            android:ems="10"
            android:singleLine="true" />
    </LinearLayout>
        
    
    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/linearLayout3"
        android:orientation="horizontal"
        android:gravity="center" >

        <Button
	    	android:id="@+id/buttonPriceSearch"
	        style="?android:attr/buttonStyleSmall"
	        android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:scaleY="0.8"
	        android:background="@drawable/basic_inquiry_btn"
	        android:onClick="OnClickSearch"/>
			
    </LinearLayout>
    
        
    <!--  android:id="@+id/tabhostPurchasePaymentStatus"  -->
    <TabHost
        android:id="@+id/tabhostManageSales"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearLayout4"
        android:layout_marginTop="10dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/tap_bar_bg" >
            </TabWidget>

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <LinearLayout
                    android:id="@+id/tab1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >
                    
                    <LinearLayout android:id="@+id/header1"
				        android:layout_height="wrap_content"
				        android:layout_width="fill_parent"
				        >
                    
	                    <TextView android:id="@+id/item1"
				            android:layout_height="fill_parent"
            				android:layout_width="0dip"
            				android:layout_weight="1"
            				android:textColor="#d7d7d7"
				            android:textStyle="bold"
				            android:textSize="14sp"
				            android:gravity="center"
				            android:background="@drawable/gray_bar_bg"
				            android:text="코드"
				        />
				        <TextView android:id="@+id/item2"
				            android:layout_height="fill_parent"
            				android:layout_width="0dip"
            				android:layout_weight="1"
            				android:textColor="#d7d7d7"
				            android:textStyle="bold"
				            android:textSize="14sp"
				            android:gravity="center"
				            android:background="@drawable/gray_bar_bg"
				            android:text="거래처명"
				        />
				        <TextView android:id="@+id/item3"
				            android:layout_height="fill_parent"
            				android:layout_width="0dip"
            				android:layout_weight="1"
            				android:textColor="#d7d7d7"
				            android:textStyle="bold"
				            android:textSize="14sp"
				            android:gravity="center"
				            android:background="@drawable/gray_bar_bg"
				            android:text="순매출"
				        />
				        <TextView android:id="@+id/item4"
				            android:layout_height="fill_parent"
            				android:layout_width="0dip"
            				android:layout_weight="1"
            				android:textColor="#d7d7d7"
				            android:textStyle="bold"
				            android:textSize="14sp"
				            android:gravity="center"
				            android:background="@drawable/gray_bar_bg"
				            android:text="이익금"
				        />
					</LinearLayout>
				
				    <!-- List Divider -->
				    <View android:layout_width="fill_parent"
				        android:layout_height="1dip"
				        android:background="?android:attr/listDivider" />
				 
				    <!-- ListView (grid_items) -->
				    <LinearLayout android:id="@+id/layout1"
				        android:layout_width="match_parent"
				        android:layout_height="fill_parent"
				        >
				        <ListView android:id="@+id/listviewSalesListTab1"
				            android:layout_height="fill_parent"
				            android:layout_width="fill_parent">
				        </ListView>
				    </LinearLayout> 
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tab2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"  >
				    
                    <LinearLayout android:id="@+id/header2"
				        android:layout_height="wrap_content"
				        android:layout_width="fill_parent"
				        >
                    
	                    <TextView android:id="@+id/item5"
				            android:layout_height="fill_parent"
            				android:layout_width="0dip"
            				android:layout_weight="1"
            				android:textColor="#d7d7d7"
				            android:textStyle="bold"
				            android:textSize="14sp"
				            android:gravity="center"
				            android:background="@drawable/gray_bar_bg"
				            android:text="바코드"
				        />
				        <TextView android:id="@+id/item6"
				            android:layout_height="fill_parent"
            				android:layout_width="0dip"
            				android:layout_weight="1"
            				android:textColor="#d7d7d7"
				            android:textStyle="bold"
				            android:textSize="14sp"
				            android:gravity="center"
				            android:background="@drawable/gray_bar_bg"
				            android:text="상품명"
				        />
				        <TextView android:id="@+id/item7"
				            android:layout_height="fill_parent"
            				android:layout_width="0dip"
            				android:layout_weight="1"
            				android:textColor="#d7d7d7"
				            android:textStyle="bold"
				            android:textSize="14sp"
				            android:gravity="center"
				            android:background="@drawable/gray_bar_bg"
				            android:text="수량"
				        />
				        <TextView android:id="@+id/item8"
				            android:layout_height="fill_parent"
            				android:layout_width="0dip"
            				android:layout_weight="1"
            				android:textColor="#d7d7d7"
				            android:textStyle="bold"
				            android:textSize="14sp"
				            android:gravity="center"
				            android:background="@drawable/gray_bar_bg"
				            android:text="순매출"
				        />
				       
					</LinearLayout>
				
				    <!-- List Divider -->
				    <View android:layout_width="fill_parent"
				        android:layout_height="1dip"
				        android:background="?android:attr/listDivider" />
				 
				    <!-- ListView (grid_items) -->
				    <LinearLayout android:id="@+id/layout2"
				        android:layout_width="match_parent"
				        android:layout_height="fill_parent"
				        android:layout_below="@+id/header2"
				        >
				        <ListView android:id="@+id/listviewSalesListTab2"
				            android:layout_height="fill_parent"
				            android:layout_width="fill_parent">
				        </ListView>
				    </LinearLayout> 
				    
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tab3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                     >
				    
                    <LinearLayout android:id="@+id/header3"
				        android:layout_height="wrap_content"
				        android:layout_width="fill_parent"
				        >
                    
	                    <TextView android:id="@+id/item10"
				            android:layout_height="fill_parent"
            				android:layout_width="0dip"
            				android:layout_weight="1"
            				android:textColor="#d7d7d7"
				            android:textStyle="bold"
				            android:textSize="14sp"
				            android:gravity="center"
				            android:background="@drawable/gray_bar_bg"
				            android:text="코드"
				        />
				        <TextView android:id="@+id/item11"
				            android:layout_height="fill_parent"
            				android:layout_width="0dip"
            				android:layout_weight="1"
            				android:textColor="#d7d7d7"
				            android:textStyle="bold"
				            android:textSize="14sp"
				            android:gravity="center"
				            android:background="@drawable/gray_bar_bg"
				            android:text="거래처명"
				        />
				        <TextView android:id="@+id/item12"
				            android:layout_height="fill_parent"
            				android:layout_width="0dip"
            				android:layout_weight="1"
            				android:textColor="#d7d7d7"
				            android:textStyle="bold"
				            android:textSize="14sp"
				            android:gravity="center"
				            android:background="@drawable/gray_bar_bg"
				            android:text="순매출"
				        />
				        
					</LinearLayout>
				
				    <!-- List Divider -->
				    <View android:layout_width="fill_parent"
				        android:layout_height="1dip"
				        android:background="?android:attr/listDivider" />
				 
				    <!-- ListView (grid_items) -->
				    <LinearLayout android:id="@+id/layout3"
				        android:layout_width="match_parent"
				        android:layout_height="fill_parent"
				        >
				        <ListView android:id="@+id/listviewSalesListTab3"
				            android:layout_height="fill_parent"
				            android:layout_width="fill_parent">
				        </ListView>
				    </LinearLayout> 
				    
                </LinearLayout>
                
                <LinearLayout
                    android:id="@+id/tab4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                     >

                    <CalendarView android:id="@+id/calendarView1"
				            android:layout_height="180dip"
				            android:layout_width="match_parent"
				            android:showWeekNumber="false"
				            			            
				             >
                        
                    </CalendarView>
				
				    <!-- List Divider -->
				    <View android:layout_width="fill_parent"
				        android:layout_height="1dip"
				        android:background="?android:attr/listDivider" />
				 
				    <!-- ListView (grid_items) -->
				    <LinearLayout android:id="@+id/layout4"
				        android:layout_marginTop="10dp"
				        android:layout_width="match_parent"
				        android:layout_height="fill_parent"
				        >
				        <ListView android:id="@+id/listviewSalesListTab4"
				            android:layout_height="fill_parent"
				            android:layout_width="fill_parent">
				        </ListView>
				    </LinearLayout> 
				    
                </LinearLayout>
                
            </FrameLayout>
        </LinearLayout>
    </TabHost>
</RelativeLayout>