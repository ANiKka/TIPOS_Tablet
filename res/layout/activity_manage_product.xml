<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bg_img"
    tools:context=".ManageProductActivity"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearLayoutTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:focusable="true"
        android:focusableInTouchMode="true"
        >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:text="바코드"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#ffffff"
            android:textSize="14sp" />
        
         <EditText
             android:id="@+id/editTextBarcode"
             android:layout_width="0dip"
             android:layout_height="wrap_content"
             android:layout_weight="1"
		     android:singleLine="true"
		     android:lines="1"
             android:ems="10"
             android:textSize="12sp"
             android:textColor="#000000"
             android:inputType="number"
             android:background="@drawable/white_text_box_small" />
         
         <requestFocus />
         
         <Button
	        android:id="@+id/buttonBarcode"
	        android:layout_width="28dp"
	        android:layout_height="28dp"
	        android:layout_marginLeft="5dp"
	        android:background="@drawable/search_btn"
	        android:onClick="onBarcodeSearch" />
	        
         <TextView
             android:id="@+id/textView3"
             android:layout_width="0dip"
             android:layout_height="wrap_content"
             android:layout_marginLeft="10dp"
             android:layout_weight="0.6"
             android:text="상품명"
             android:textAppearance="?android:attr/textAppearanceSmall"
             android:textColor="#ffffff"
             android:textSize="14sp" />
        
         <EditText
	        android:id="@+id/editTextProductName"
	        android:layout_width="0dip"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:ems="10"
	        android:textColor="#000000"
            android:background="@drawable/white_text_box_small"
	        android:textSize="14sp"
	        android:singleLine="true" />
             

    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView4"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.45"
            android:text="거래처"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#ffffff"
            android:textSize="14sp" />
        
         <EditText
             android:id="@+id/editTextCustomerCode"
             android:layout_width="0dip"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:ems="10"
             android:textColor="#000000"
             android:inputType="number"
             android:background="@drawable/white_text_box_small"
             android:textSize="14sp"
             android:singleLine="true" />
	        
         <Button
	        android:id="@+id/buttonCustomer"
	        android:layout_width="28dp"
	        android:layout_height="28dp"
	        android:layout_marginLeft="5dp"
	        android:background="@drawable/search_btn"
            android:onClick="onCustomerSearch" />
        
         <EditText
	        android:id="@+id/editTextCustomerName"
	        android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
	        android:ems="10"
	        android:textColor="#000000"
            android:background="@drawable/white_text_box_small"
	        android:textSize="14sp"
	        android:singleLine="true" />
    
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView5"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.62"
            android:text="분류"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#ffffff"
            android:textSize="14sp" />
        
         <EditText
             android:id="@+id/editTextCustomerClassification1"
             android:layout_width="0dip"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:ems="10"             
	         android:singleLine="true"             
             android:textColor="#000000"
             android:background="@drawable/white_text_box_small"
	         android:textSize="14sp"/>
	        
         <EditText
             android:id="@+id/editTextCustomerClassification2"
             android:layout_width="0dip"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:layout_marginLeft="5dp"
             android:ems="10"
             android:singleLine="true" 
             android:textColor="#000000"
             android:background="@drawable/white_text_box_small"
	         android:textSize="14sp"/>
         
         <EditText
	        android:id="@+id/editTextCustomerClassification3"
	        android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
	        android:ems="10"
	        android:singleLine="true" 
	        android:textColor="#000000"
            android:background="@drawable/white_text_box_small"
	        android:textSize="14sp"/>
    
    </LinearLayout>

	<LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView6"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:text="과세구분"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#ffffff"
            android:textSize="14sp" />
        
        <Spinner
            android:id="@+id/spinnerTaxationType"
           android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:entries="@array/taxation_type"
            android:prompt="@string/choose_taxation_type"
            />
        
        <CheckBox
            android:id="@+id/checkBoxSurtax"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="부가세"
            android:textSize="14sp"
        />
        
        <TextView
            android:id="@+id/textView7"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="그룹"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="14sp" />

        <Spinner
            android:id="@+id/spinnerGroupType"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:entries="@array/group_type"
            android:prompt="@string/choose_group_type" />
    
    </LinearLayout>
    
	<LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView8"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.77"
            android:text="규격"
            android:textColor="#ffffff"
            android:textSize="14sp" />
        
        <EditText
            android:id="@+id/editTextStandard"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:ems="10"
            android:textSize="14sp"
            android:textColor="#000000"
            android:background="@drawable/white_text_box_small" />
        
        <TextView
            android:id="@+id/textView9"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="입수"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#ffffff"
            android:textSize="14sp" />

         <EditText
	        android:id="@+id/editTextAcquire"
	        android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
	        android:ems="10"
	        android:textSize="14sp" 
	        android:textColor="#000000"
            android:background="@drawable/white_text_box_small"
	     />       
    
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView10"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.77"
            android:text="매입가"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#ffffff"
            android:textSize="14sp" />
        
        <EditText
            android:id="@+id/editTextPurchasePrice"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:ems="10"
            android:textSize="14sp"
            android:textColor="#000000"
            android:background="@drawable/white_text_box_small"/>
        
        <TextView
            android:id="@+id/textView11"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="매입원가"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#ffffff"
            android:textSize="14sp" />

         <EditText
	        android:id="@+id/editTextPurchasePriceOriginal"
	        android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
	        android:ems="10"
	        android:textSize="14sp" 
	        android:textColor="#000000"
            android:background="@drawable/white_text_box_small"
	     />       
    
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView12"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.77"
            android:text="판매가"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/editTextSalesPrice"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:background="@drawable/white_text_box_small"
            android:ems="10"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="이익율"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/editTextDifferentRatio"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:background="@drawable/white_text_box_small"
            android:ems="10"
            android:textColor="#000000"
            android:textSize="14sp" />
    </LinearLayout>
    
    
	<LinearLayout
        android:id="@+id/linearLayout8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >
        
        <Button
	        android:id="@+id/buttonProductRegist"
	        style="?android:attr/buttonStyleSmall"
	        android:layout_width="0dip"
	        android:layout_height="wrap_content"
	        android:scaleY="0.8"
	        android:layout_weight="1"
	        android:background="@drawable/register_btn" />
        
        <Button
	        android:id="@+id/buttonProductModify"
	        style="?android:attr/buttonStyleSmall"
	        android:layout_width="0dip"
	        android:layout_height="wrap_content"
	        android:scaleY="0.8"
	        android:layout_weight="1"
	        android:layout_marginLeft="8dp"
	        android:background="@drawable/change_btn" />

        <Button
	        android:id="@+id/buttonProductRenew"
	        style="?android:attr/buttonStyleSmall"
	        android:layout_width="0dip"
	        android:layout_height="wrap_content"
	        android:scaleY="0.8"
	        android:layout_weight="1"
	        android:layout_marginLeft="8dp"
	        android:background="@drawable/replace_btn" />
        
        <Button
	        android:id="@+id/buttonProductSearch"
	        style="?android:attr/buttonStyleSmall"
	        android:layout_width="0dip"
	        android:layout_height="wrap_content"
	        android:scaleY="0.8"
	        android:layout_weight="1"
	        android:layout_marginLeft="8dp"
	        android:background="@drawable/search_btn" />        
	
	</LinearLayout>
	
    <LinearLayout
        android:id="@+id/linearLayout9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/tap_bar_bg"
        android:orientation="horizontal" >
        
        <TextView
            android:id="@+id/textView14"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:text="상품목록"
            android:layout_weight="1"
            android:textColor="#ffffff"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="14sp" />
	
	</LinearLayout>
	
    <!-- Header -->
    <LinearLayout android:id="@+id/header"
        
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        >
        <TextView android:id="@+id/item1"
            android:layout_height="fill_parent"
            android:layout_width="110dp"
            android:text="바코드"
            android:textColor="#d7d7d7"
            android:textStyle="bold"
            android:textSize="14sp"
            android:gravity="center"
            android:background="@drawable/gray_bar_bg"
        />
        <TextView android:id="@+id/item2"
            android:layout_height="fill_parent"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:text="상품명"
			android:textColor="#d7d7d7"
            android:textStyle="bold"
            android:textSize="14sp"
            android:gravity="center"
            android:background="@drawable/gray_bar_bg"
        />
        <TextView android:id="@+id/item3"
            android:layout_width="80dp"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="매입가"
            android:textColor="#d7d7d7"
            android:textStyle="bold"
            android:textSize="14sp"
            android:background="@drawable/gray_bar_bg"
        />
        <TextView android:id="@+id/item4"
            android:layout_width="80dp"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="판매가"
            android:textColor="#d7d7d7"
            android:textStyle="bold"
            android:textSize="14sp"
            android:background="@drawable/gray_bar_bg"
        />
    </LinearLayout>

    <!-- List Divider -->
    <View android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="?android:attr/listDivider" />
 
    <!-- ListView (grid_items) -->
    <LinearLayout android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ListView android:id="@+id/listviewProductList"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent">
        </ListView>
    </LinearLayout>

    
</LinearLayout>
