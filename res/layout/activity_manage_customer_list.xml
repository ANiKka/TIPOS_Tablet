<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bg_img"
    tools:context=".ManageCustomerActivity" >

    <!-- List Divider -->
 	<View android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_below="@id/header"
        android:background="?android:attr/listDivider" />
 	
    <LinearLayout
        android:id="@+id/linearLayoutTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="14sp"
        android:background="@drawable/tap_bar_bg"
        android:gravity="center"
        android:orientation="vertical" >
	    
	    <TextView
	        android:id="@+id/textView4"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="14sp"
	        android:text="거래처 목록"/>
	    
    </LinearLayout>
    
    <!-- Header -->
    <LinearLayout android:id="@+id/header"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_below="@id/linearLayoutTitle"
        >
        <TextView android:id="@+id/item1"
            android:layout_height="fill_parent"
            android:layout_width="0dip"
            android:layout_weight="0.7"
            android:text="코드"
            android:textColor="#d7d7d7"
            android:textStyle="bold"
            android:textSize="14sp"
            android:gravity="center"
            android:width="100dip"
            android:height="20dip"
            android:background="@drawable/gray_bar_bg"
        />
        <TextView android:id="@+id/item2"
            android:layout_height="fill_parent"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:text="거래처명"
            android:textColor="#d7d7d7"
            android:textStyle="bold"
            android:textSize="14sp"
            android:gravity="center"
            android:width="100dip"
            android:height="20dip"
            android:background="@drawable/gray_bar_bg"
        />
        <TextView android:id="@+id/item3"
            android:layout_height="fill_parent"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:text="구분"
            android:textColor="#d7d7d7"
            android:textStyle="bold"
            android:textSize="14sp"
            android:gravity="center"
            android:width="100dip"
            android:height="20dip"
            android:background="@drawable/gray_bar_bg"
        />
    </LinearLayout>
    
    <!-- ListView (grid_items) -->
    <LinearLayout android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/header"
        >
        <ListView android:id="@+id/listviewCustomerList"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent">
        </ListView>
    </LinearLayout>
    
</RelativeLayout>